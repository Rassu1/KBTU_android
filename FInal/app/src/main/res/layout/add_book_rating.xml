<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddBookRatings">

    <ImageView
        android:id="@+id/picIv"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/book"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="titleTv"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/picIv"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/multiline_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="450dp"
        android:layout_marginBottom="250dp"
        android:textAlignment="center"
        android:maxLines="8"
        android:scrollbarFadeDuration="0"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam blandit auctor sem, ut vestibulum sapien sodales eu. Nam nec felis id enim posuere iaculis. Integer in nisl quis magna volutpat vestibulum. Phasellus at dolor nec odio pretium iaculis sed ut libero. Duis rhoncus quam a massa vestibulum, a facilisis quam accumsan. Curabitur luctus ante vitae augue semper, id euismod massa fringilla. Aliquam at nulla eget nisl dapibus malesuada ac sed velit. Suspendisse potenti. Sed bibendum, nulla sed porttitor faucibus, odio augue malesuada purus, vel laoreet mi nulla sit amet ante. Nam auctor in tortor non consequat. Donec interdum lacus non volutpat laoreet."
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/picIv" />

    <TextView
        android:id="@+id/priceTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="price"
        android:textAlignment="center"
        android:textSize="18dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/multiline_text" />


    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="0"
        android:stepSize="1"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/priceTv"
        android:contentDescription="Rating" />



</androidx.constraintlayout.widget.ConstraintLayout>
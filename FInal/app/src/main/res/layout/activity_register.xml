<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_back_2"
    tools:context=".ActivityRegister">


    <ImageView
        android:id="@+id/reg_page_main_icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/reg_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/Reg_main_icon" />

    <TextView
        android:id="@+id/reg_page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Registr_text"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reg_page_main_icon"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/editText_User_name"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:hint="@string/User_name"
        android:textAlignment="center"
        android:textColorHint="@color/blue"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_fill_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reg_page_title"
        android:autofillHints="@string/User_name"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/editText_User_email"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:inputType="textEmailAddress"
        android:hint="@string/User_email"
        android:textColorHint="@color/blue"
        android:textAlignment="center"
        android:background="@drawable/button_fill_blue"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_User_name"
        android:autofillHints="@string/User_email"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/editText_User_pass"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:inputType="textPersonName"
        android:hint="@string/User_pass"
        android:textColorHint="@color/blue"
        android:textAlignment="center"
        android:background="@drawable/button_fill_blue"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_User_email"
        android:autofillHints="@string/User_pass"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/editText_User_ver_pass"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:inputType="textPersonName"
        android:hint="@string/User_pass_ver"
        android:textColorHint="@color/blue"
        android:textAlignment="center"
        android:background="@drawable/button_fill_blue"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_User_pass"
        android:autofillHints="@string/User_pass_ver"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/registr_button"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/blue"
        android:text="@string/Registr_text"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:cornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="75dp"
   />


    <TextView
        android:id="@+id/sig_no_ver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Alreaedy_reg"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registr_button"
        android:layout_marginTop="10dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>